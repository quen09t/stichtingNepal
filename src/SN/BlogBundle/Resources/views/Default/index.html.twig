{% extends 'SNCoreBundle::layout.html.twig' %}
{% block content %}
<h3> Blog </h3>

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <a href=" {{ path('sn_blog_add') }}">Add</a>
    {% endif %}

    {% for post in posts %}
        <div class="post">
            <h3>{{ post.title }}</h3>
        {% if post.image.webPath is defined %}
            <img
                    src="{{ asset(post.image.webPath) }}"
                    alt="{{ post.image.alt }}"
            />
        {%  endif %}
            <p>{{ post.content }}</p>
            <a href=" {{ post.link }}">{{ post.link }}</a>
            <span class="postAuthor">{{ post.createdBy }}</span>
            <span class="postDate">{{ post.createdOn|date("F jS \\a\\t g:ia") }}</span>
        </div>
    {% endfor %}
{%  endblock %}