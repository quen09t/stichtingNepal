{% extends 'SNCoreBundle::layout.html.twig' %}
{% block content %}
    <table cellspacing="0">
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
    {% for post in posts %}
        <tr>
            <td>{{ post.title }}</td>
            <td>{{ post.createdBy }}</td>
            <td>{{ post.createdOn|date("F jS \\a\\t g:ia") }}</td>
            <td>
                <span class="deleteButton button"><a href=" {{ path('sn_blog_delete', {'id' : post.id, }) }}">Delete</a></span>
                <span class="editButton button"><a href=" {{ path('sn_blog_edit', {'id' : post.id, }) }}">Edit</a></span>
            </td>
        </tr>
    {% endfor %}
        </tbody>
    </table>
{% endblock %}