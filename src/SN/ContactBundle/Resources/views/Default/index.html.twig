{% extends 'SNCoreBundle::layout.html.twig' %}
{% block content %}

    <h2>Contact</h2>
    <table cellspacing="0">
            {{ form_start(form)}}
            {{ form_errors(form) }}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                {{ form_row(form.name, {'value' : app.user.username}) }}
                {{ form_row(form.email, {'value' : app.user.email}) }}
            {% else %}
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
            {% endif %}
            {{ form_row(form.subject) }}
            {{ form_row(form.message) }}
            {{ form_rest(form) }}
    </table>




    {{ form_end(form) }}

{% endblock %}

